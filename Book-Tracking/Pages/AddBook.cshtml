@page
@using Book_Tracking_Models;
@model Book_Tracking.Pages.AddBookModel
@{
}


<section class="add-todo-wrapper">
    <div class="container">
        <div class="add-todo-title__wrap">
            <h1>Add Book</h1>
        </div>
        <div class="todo-form__wrap">
            <form method="post">
                <div class="form-group">
                    <input asp-for="Book.ISBN" placeholder="ISBN" required />
                </div>
                <div class="form-group">
                    <input asp-for="Book.Title" placeholder="Title" required />
                </div>
                <div class="form-group">
                    <input asp-for="Book.Author" placeholder="Author" required />
                </div>
                <div class="form-group">
                    <select asp-for="Book.BookCategoriesId">
                        @{
                            if (Model.BookCategories != null)
                            {
                                @foreach (BookCategories item in Model.BookCategories)
                                {
                                    <option value="@item.Id">@item.NameToken</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Book" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>