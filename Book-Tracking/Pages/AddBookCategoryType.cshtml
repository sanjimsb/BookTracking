@page
@model Book_Tracking.Pages.AddBookCategoryTypeModel
@{
}

<section class="add-todo-wrapper">
    <div class="container">
        <div class="add-todo-title__wrap">
            <h1>Add Book Category</h1>
        </div>
        <div class="todo-form__wrap">
            <form method="post">
                <div class="form-group">
                    <input asp-for="categoryType.Type" placeholder="Category Type" required />
                </div>
                <div class="form-group">
                    <input asp-for="categoryType.Name" placeholder="Category Name" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Category Type" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>